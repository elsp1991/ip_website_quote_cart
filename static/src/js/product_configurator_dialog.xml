<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-inherit="sale.ProductConfiguratorDialog" t-inherit-mode="extension">
        <!-- Hide Confirm button when showing quote buttons -->
        <button name="sale_product_configurator_confirm_button" position="attributes">
            <attribute name="t-if">!showShopButtons() and !showQuoteButtons()</attribute>
        </button>
        <!-- Hide Cancel button when showing quote buttons -->
        <button name="sale_product_configurator_cancel_button" position="attributes">
            <attribute name="t-if">!showShopButtons() and !showQuoteButtons()</attribute>
        </button>
        <!-- Quote cart buttons - shown only when is_quote_cart is true -->
        <button name="sale_product_configurator_cancel_button" position="after">
            <div
                t-if="showQuoteButtons()"
                class="d-flex flex-column flex-md-row align-items-center gap-2 order-2 order-md-1 w-100 w-md-auto"
            >
                <button
                    name="ip_quote_configurator_add_button"
                    class="btn btn-primary w-100"
                    t-on-click="() => this.onConfirm({goToCart: false})"
                    t-att-disabled="!isPossibleConfiguration() || !canBeSold()"
                >
                    <i class="fa fa-file-text me-1"/> Add
                </button>
                <button
                    name="ip_quote_configurator_goto_button"
                    class="btn btn-outline-primary text-nowrap w-100"
                    t-on-click="() => this.onConfirm({goToCart: true})"
                    t-att-disabled="!isPossibleConfiguration() || !canBeSold()"
                >
                    Go to Quote
                    <i class="fa fa-angle-right ms-2"/>
                </button>
            </div>
        </button>
    </t>
</templates>
